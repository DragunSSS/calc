                                if (l == "raise") {
                                    cout << "сколько фишек:";
                                    cin >> p;
                                    if ((p <= (bet2 + stack2)) && (p > bet1) && (p <= (stack1 + bet1))) {
                                        m = 0;
                                        stack2 = stack2 + bet2 - p;
                                        bet1 = p;
                                        cout << "player2 bet=" << bet2 << endl;
                                        cout << "player2 stack=" << stack2 << endl;

                                    }
                                }


                                if ((l == "fold") && (bet2 < bet1)) {
                                    m = 0;
                                    fild = 1;
                                    fuld = 1;
                                    cout << "my stack =" << (stack1 + bet1 + bet2 + pot) << endl;
                                    cout << "player2 stack =" << stack2 << endl;
                                    stack1 = (stack1 + bet1 + bet2);
                                }
                                if ((l == "check") && (bet1 == 0)) {
                                    m = 0;
                                    fild = 1;
                                    stack1 = stack1;
                                    bet2 = bet1;
                                    cout << "my bet=" << bet2 << endl;
                                    cout << "my stack=" << stack2 << endl;

                                }
                                if ((l == "call") && (j > 500)) {
                                    m = 0;
                                    stack2 = stack2 + bet1 - bet2;
                                    bet2 = bet1;
                                    cout << "player2 bet=" << bet2 << endl;
                                    cout << "player2 stack=" << stack2 << endl;
                                }

                                if (m != 0) { cout << "введите правильные данные" << endl; }
                            }

                        }
                    }
                }
                for (g = 0; g < 27; g++) {
                    cout << "|    |    |    |    |    |    |    |" << endl;
                }

                //все дефствия на ривере 
                cout << cards[board[5]] << " ";
                cout << cards[board[6]] << " ";
                cout << "player2 cards: ";
                cout << cards[board[7]] << " ";
                cout << cards[board[8]] << " ";
                system("pause");
                
                cout << "кто победил игрок 1 или 2?";
                cin >> a;
                if (a == 1) {
                    stack1 = stack1 + pot;
                }
                if (a == 2) {
                    stack2 = stack2 + pot;
                }
                if (a == 3) {
                    stack1 = (stack1 + ((pot+bet1+bet2) / 2));
                    stack2 = (stack2 + ((pot+bet1+bet2) / 2));
                }
                system("pause");
                cout << "my stack =" << stack1 << endl;
                cout << "player2 stack =" << stack2 << endl;
            }

        }
        }
        a = a + 1;
    
    }
    system("pause");
    return 0;

}
